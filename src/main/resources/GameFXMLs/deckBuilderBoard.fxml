<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ComputerGames.DeckBuilderSimController">
   <children>
      <BorderPane fx:id="deckBuilderBorderPane" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#fourPlayerButtonAction" text="4 Player" HBox.hgrow="NEVER">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#resetButtonAction" text="Reset" HBox.hgrow="NEVER">
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="5.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </HBox>
         </top>
         <left>
            <AnchorPane fx:id="leftAnchorPane" prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
         </left>
         <bottom>
            <AnchorPane fx:id="bottomAnchorPane" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </bottom>
         <right>
            <AnchorPane fx:id="rightAnchorPane" prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
         </right></BorderPane>
   </children>
</AnchorPane>
